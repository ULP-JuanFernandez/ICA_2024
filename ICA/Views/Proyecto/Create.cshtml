@model ICA.Models.Proyecto

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <h1>Create</h1>
    <h4>Proyecto</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre del proyecto" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Creador" class="control-label">Creador</label>
                    <input asp-for="Creador" class="form-control" placeholder="Nombre del creador" />
                    <span asp-validation-for="Creador" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Fecha" class="control-label">Fecha</label>
                    <input asp-for="Fecha" type="date" class="form-control" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="4" placeholder="Descripción del proyecto"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="GeneroId" class="control-label">Genero</label>
                    <div class="input-group">
                        <select asp-for="GeneroId" class="form-control">
                            <option value="">Seleccione un genero</option>
                            @if (ViewBag.VBGeneros != null)
                            {
                                foreach (var g in (IList<Genero>)ViewBag.VBGeneros)
                                {
                                    <option value="@g.Id">@g.Nombre</option>
                                }
                            }
                            else
                            {
                                <option value="">No hay Generos disponibles</option>
                            }
                        </select>
                        <div class="input-group-append">
                            <a asp-controller="Genero" asp-action="Index" class="btn-add" title="Agregar genero">
                                <img src="~/img/icon/Agregar.png" alt="Agregar" />
                            </a>
                        </div>
                    </div>
                    <span asp-validation-for="GeneroId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TecnicaturaId" class="control-label">Tecnicatura</label>
                    <div class="input-group">
                        <select asp-for="TecnicaturaId" class="form-control">
                            <option value="">Seleccione una tecnicatura</option>
                            @if (ViewBag.VBTecnicaturas != null)
                            {
                                foreach (var t in (IList<Tecnicatura>)ViewBag.VBTecnicaturas)
                                {
                                    <option value="@t.Id">@t.Nombre</option>
                                }
                            }
                            else
                            {
                                <option value="">No hay tecnicaturas disponibles</option>
                            }
                        </select>
                        <div class="input-group-append">
                            <a asp-controller="Genero" asp-action="Create" title="Más" class="btn btn-primary">
                                +
                            </a>
                        </div>
                    </div>
                    <span asp-validation-for="TecnicaturaId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Link" class="control-label">Enlace</label>
                    <input asp-for="Link" class="form-control" placeholder="Enlace del proyecto" />
                    <span asp-validation-for="Link" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .btn-add img {
        width: 40px; /* Adjust the size as needed */
        height: auto;
        cursor: pointer; /* Indicates that the image is clickable */
        margin-left:5px;
    }

        .btn-add img:hover {
            opacity: 0.8; /* Optional: Adds a hover effect */
        }
</style>