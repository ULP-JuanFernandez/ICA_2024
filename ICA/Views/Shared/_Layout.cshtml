<!DOCTYPE html>
<html lang="es-ar">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ICA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <link href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>

<body>
    <header>
       
        <nav class="navbar navbar-expand-lg custom-navbar fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/img/LogoICA/ULP_ICA bold_blanco.png" alt="Logo">
                </a>
                <!-- Botón toggler solo visible en móviles -->
                <button class="navbar-toggler d-lg-none navbar-light bg-white" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menú colapsable para pantallas grandes (desktop) -->
                <div class="collapse navbar-collapse d-none d-lg-block" id="navbarNav" style="";>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Home" asp-action="Index">INICIO</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link " href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                TECNICATURA <i class="bi bi-chevron-down"></i>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-controller="Tecnicatura_01" asp-action="Index" aria-label="Producción y Realización Audiovisual">Producción y Realización Audiovisual</a></li>
                                <li><a class="dropdown-item" asp-controller="Tecnicatura_02" asp-action="Index" aria-label="Diseño Digital y Videojuegos">Diseño Digital y Videojuegos</a></li>
                                <li><a class="dropdown-item" asp-controller="Tecnicatura_03" asp-action="Index" aria-label="Comunicación y Medios">Comunicación y Medios</a></li>
                                <li><a class="dropdown-item" asp-controller="Tecnicatura_04" asp-action="Index" aria-label="Publicidad">Publicidad</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" target="_blank" href="https://ulp.edu.ar/">ULP</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Index#contacto">CONTACTO</a>
                        </li>
                    </ul>
                </div>

                <!-- Offcanvas solo visible en dispositivos móviles -->
                <div class="offcanvas offcanvas-end custom-offcanvas d-lg-none" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Menú</h5>
                        <button type="button" class="btn-close " data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Home" asp-action="Index">INICIO</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link " href="#" id="offcanvasNavbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    TECNICATURA <i class="bi bi-chevron-down"></i>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="offcanvasNavbarDropdown">
                                    <li><a class="dropdown-item" asp-controller="Tecnicatura_01" asp-action="Index" aria-label="Producción y Realización Audiovisual">Producción y Realización Audiovisual</a></li>
                                    <li><a class="dropdown-item" asp-controller="Tecnicatura_02" asp-action="Index" aria-label="Diseño Digital y Videojuegos">Diseño Digital y Videojuegos</a></li>
                                    <li><a class="dropdown-item" asp-controller="Tecnicatura_03" asp-action="Index" aria-label="Comunicación y Medios">Comunicación y Medios</a></li>
                                    <li><a class="dropdown-item" asp-controller="Tecnicatura_04" asp-action="Index" aria-label="Publicidad">Publicidad</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" target="_blank" href="https://ulp.edu.ar/">ULP</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Index#contacto">CONTACTO</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <a href="#" id="back-to-top" aria-label="Volver arriba" title="Volver arriba" class="custom-back-to-top">
            <i class="bi bi-arrow-up-square-fill"></i>
        </a>
    </div>

    
    <footer class="bg-dark text-light pt-4 pb-2">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-3 mb-3">
                    <div class="mb-3 d-flex justify-content-center p-3">
                        <a asp-controller="Home" action="Index">
                            <img src="~/img/LogoICA/ULP_ICA bold_blanco.png" alt="ica" class="img-fluid footer-logo">
                        </a>
                    </div>
                    <div class="mb-3 d-flex justify-content-center p-3">
                        <a target="_blank" href="https://ulp.edu.ar">
                            <img src="~/img/LogoICA/ulp-logo.png" alt="Universidad de La Punta" class="img-fluid footer-logo">
                        </a>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <i class="bi bi-geo-alt"></i>
                    <h5>Dirección</h5>
                    <address>Av. Universitaria s/n, Ciudad de La Punta, San Luis</address>
                </div>
                <div class="col-md-3 mb-3 navegacion">
                    <h5>Navegación</h5>
                    <ul class="list-unstyled ">
                        <li class="mb-2"><a asp-controller="Home" action="Index" class="">Inicio</a></li>
                        <li class="mb-2"><a target="_blank" href="https://ulp.edu.ar/" class="">ULP</a></li>
                        <li class="mb-2"><a href="/Home/Index#contacto" class="">Contacto</a></li>
                        <li class="mb-2"><a asp-controller="Tecnicatura_01" asp-action="Index" class="">Producción y Realización Audiovisual</a></li>
                        <li class="mb-2"><a asp-controller="Tecnicatura_02" asp-action="Index" class="">Diseño Digital y Videojuegos</a></li>
                        <li class="mb-2"><a asp-controller="Tecnicatura_03" asp-action="Index" class="">Comunicación y Medios</a></li>
                        <li class="mb-2"><a asp-controller="Tecnicatura_04" asp-action="Index" class="">Publicidad</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="d-flex justify-content-center social-icons">
                        <a target="_blank" href="https://www.facebook.com/profile.php?id=386446491440480&_rdr" class="text-light mx-2" aria-label="Facebook">
                            <i class="bi bi-facebook social-icon"></i>
                        </a>
                        <a target="_blank" href="https://x.com/icaulp" class="text-light mx-2" aria-label="Twitter">
                            <i class="bi bi-twitter social-icon"></i>
                        </a>
                        <a target="_blank" href="https://www.instagram.com/ulpalumnos/reel/C69QQcjRt7c/" class="text-light mx-2" aria-label="Instagram">
                            <i class="bi bi-instagram social-icon"></i>
                        </a>
                        <a target="_blank" href="https://ar.linkedin.com/company/universidad-de-la-punta" class="text-light mx-2" aria-label="LinkedIn">
                            <i class="bi bi-linkedin social-icon"></i>
                        </a>
                    </div>
                </div>
               
            </div>
            <div class="text-center mt-4">
                <p class="mb-0">2024 © Todos los derechos reservados - <a href="mailto:tecnologiasdelainformacion@ulp.edu.ar" class="text-light">Tecnologías de la Información</a> - ULP.</p>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>
    
    <!-- Cargar jQuery antes del script galeria.js -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Otros scripts -->
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const backToTopButton = document.getElementById('back-to-top');
            window.addEventListener('scroll', () => {
                if (window.scrollY > 100) {
                    backToTopButton.style.display = 'block';
                } else {
                    backToTopButton.style.display = 'none';
                }
            });

            backToTopButton.addEventListener('click', (e) => {
                e.preventDefault();
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            });

            $('#example').DataTable(); // Example DataTable initialization
        });
    </script>
</body>
</html>
